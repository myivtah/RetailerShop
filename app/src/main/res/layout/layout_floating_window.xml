<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="24dp">

    <!-- Reminder Text -->
    <TextView
        android:id="@+id/txtReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have reached 10 transactions. Please contact admin to subscribe."
        android:textSize="16sp"
        android:textColor="#333333"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:textAlignment="center"/>

    <!-- Chat Admin Button -->
    <Button
        android:id="@+id/btnChatAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat Admin"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_gradient"
        android:layout_gravity="center"/>
</LinearLayout>
